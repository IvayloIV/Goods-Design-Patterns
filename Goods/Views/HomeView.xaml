<UserControl x:Class="Goods.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Goods.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="btnFormInput"
                Content="Въвеждане"
                VerticalAlignment="Bottom"
                Width="150"
                Height="50"
                Grid.Row="0"
                Command="{Binding Path=NavigationFormInputCommand}"/>

        <Button Name="btnReports"
                Content="Справки"
                VerticalAlignment="Center"
                Width="150"
                Height="50"
                Grid.Row="1"
                Command="{Binding Path=NavigationReportsCommand}"/>

        <Button Name="btnExit"
                Content="Изход"
                VerticalAlignment="Top"
                Width="150"
                Height="50"
                Grid.Row="2"
                Command="{Binding Path=NavigationExitCommand}"/>
    </Grid>
</UserControl>
